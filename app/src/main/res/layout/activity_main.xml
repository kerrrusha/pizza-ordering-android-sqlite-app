<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_x="100dp">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="43dp"
        android:fontFamily="sans-serif-black"
        android:text="Pizza ordering"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/pizza_icon" />

    <TextView
        android:id="@+id/text_view_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="110dp"
        android:fontFamily="sans-serif-black"
        android:text="MENU"
        android:textSize="18sp" />

    <TableLayout
        android:id="@+id/table_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Name"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"/>

            <TextView
                android:text="Size"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"/>

            <TextView
                android:text="Weight"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"/>

            <TextView
                android:text="Cost"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:layout_marginVertical="5dp">

            <TextView
                android:text="Gogi"
                android:textSize="12sp"/>
            <TextView
                android:text="30cm\n40cm"
                android:textSize="12sp"/>
            <TextView
                android:text="470g\n640g"
                android:textSize="12sp"/>
            <TextView
                android:text="83.40 ₴\n121.50 ₴"
                android:textSize="12sp"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:layout_marginVertical="5dp">

            <TextView
                android:text="Baconator"
                android:textSize="12sp"/>
            <TextView
                android:text="30cm\n40cm"
                android:textSize="12sp"/>
            <TextView
                android:text="450g\n610g"
                android:textSize="12sp"/>
            <TextView
                android:text="125.00 ₴\n151.50 ₴"
                android:textSize="12sp" />

        </TableRow>

    </TableLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_input_form"
        android:name="com.kerrrusha.lab_3.activity.main.InputFormFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="280dp"
        tools:layout="@layout/fragment_input_form" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_form_result"
        android:name="com.kerrrusha.lab_3.activity.main.FormResultFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="560dp"
        tools:layout="@layout/fragment_form_result" />

    <Button
        android:id="@+id/openDbButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp"
        android:layout_marginStart="30dp"
        android:background="@color/white"
        android:text="Open DB" />

</RelativeLayout>